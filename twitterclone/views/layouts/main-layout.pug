include ../mixins/mixins
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        
        <!-- CSS only -->
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM' crossorigin='anonymous')

        link(rel="stylesheet", href="/css/main-layout.css")
        title #{pageTitle}

    body 
        script.
            var profileUserId = '!{profileUser._id}';             
            var userLoggedIn = !{userLoggedInJS};                
        .wrapper
            .row                 
                nav.col-2                    
                    a(href="/") 
                        i.fa-solid.blue.fa-dove
                    a(href="/") 
                        i.fa-solid.fa-house
                    a(href="/search") 
                        i.fa-solid.fa-magnifying-glass
                    a(href="/notifications") 
                        i.fa-solid.fa-bell
                    a(href="/inbox") 
                        i.fa-solid.fa-envelope
                    a(href=`/profile/${userLoggedIn.username}`) 
                        i.fa-solid.fa-user
                    a(href="/logout") 
                        i.fa-solid.fa-right-from-bracket
                .mainSectionContainer.col-8.col-md-5
                    .titleContainer
                        h1 #{pageTitle}
                        
                    block content                    

                .d-none.d-md-block.col-2 
                    span third block
                        
            
        
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js')
        script(src='https://kit.fontawesome.com/c7b15dbede.js', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz' crossorigin='anonymous')
        
        block scripts  
        script(src="/js/script.js")

        
             
       

       
       
